{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build/js",
        "target": "ES2016",
        "noEmitOnError": false,
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true, 
        "lib": ["ESNext", "DOM"],
        "strict": true,
    },
    "include": [
        "./src/**/*.ts", "./src/*.ts",
    ]
}